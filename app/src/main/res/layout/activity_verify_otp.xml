<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                                    xmlns:tools="http://schemas.android.com/tools"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    tools:context=".Activity.ForgetPassword">

	<ImageView
		android:id="@+id/imageView18"
		android:layout_width="413dp"
		android:layout_height="243dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:srcCompat="@drawable/ic_picture3" />

	<ScrollView
		android:id="@+id/scrollView4"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		tools:layout_editor_absoluteY="-35dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<EditText
				android:id="@+id/codeForgetPassword"
				android:layout_width="0dp"
				android:layout_height="48dp"
				android:layout_marginStart="32dp"
				android:layout_marginEnd="32dp"
				android:layout_weight="1"
				android:autofillHints="none"
				android:background="@drawable/bg_edit_text"
				android:gravity="center_horizontal|center_vertical"
				android:hint="Codice"
				android:maxLength="2000"
				android:maxLines="4"
				android:scrollHorizontally="false"
				android:textColor="#000000"
				android:textColorHint="#5A5A5A"
				android:textSize="20sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<Button
				android:id="@+id/btnVerify"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="32dp"
				android:background="@drawable/btn_general"
				android:text="VERIFICA"
				android:textAlignment="center"
				android:textColor="@color/white"
				app:layout_constraintEnd_toEndOf="@+id/codeForgetPassword"
				app:layout_constraintStart_toStartOf="@+id/codeForgetPassword"
				app:layout_constraintTop_toBottomOf="@+id/codeForgetPassword"></Button>

			<ImageView
				android:id="@+id/imageView19"
				android:layout_width="194dp"
				android:layout_height="116dp"
				android:layout_marginTop="60dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.852"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/ic_picture11" />

			<ImageView
				android:id="@+id/imageView20"
				android:layout_width="188dp"
				android:layout_height="145dp"
				android:layout_marginTop="68dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintHorizontal_bias="0.556"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/ic_picture7" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>